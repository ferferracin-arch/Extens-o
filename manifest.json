{
  "manifest_version": 3,
  "name": "Minha Extensão AMZ Analytics",
  "version": "5.1.1",
  "description": "AMZ Analytics FINAL – painel unificado com produto, ranking, vendas, buy box e sellers.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.amazon.com.br/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com.br/dp/*",
        "https://www.amazon.com.br/gp/product/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}